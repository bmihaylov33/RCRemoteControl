<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.remote.bmihaylov.rccar.AccelerometerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/state_text"
        android:textColor="#000"
        android:textSize="42sp"
        android:text="@string/state"
        android:id="@+id/state"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:text="@string/stay"
        android:id="@+id/state_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/distance"
        android:id="@+id/distance"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/distance"
        android:textSize="18sp"
        android:text="208 cm"
        android:id="@+id/distance_text"/>

    <Button
        android:layout_height="38dp"
        android:layout_width="38dp"
        android:background="@drawable/lightbulb"
        android:layout_below="@+id/distance"
        android:id="@+id/light_bt"/>

    <ImageView
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:background="@drawable/battery_outline"
        android:layout_alignParentEnd="true"
        android:id="@+id/battery_level" />

    <Button
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:background="@drawable/bt_normal_mode"
        android:layout_toStartOf="@+id/battery_level"
        android:id="@+id/normal_mode_bt" />

    </RelativeLayout>

</FrameLayout>
